{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "es5",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "removeComments": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false, // Problematic editor support, so disabled for now.
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "jsx": "react",
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost",
      "ES2015.Promise",
      "ES2015.Symbol"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/generated"
  ],
  "types": [
    "typePatches"
  ],
  "skipBabel": true
}
